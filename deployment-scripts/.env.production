# Production Environment Configuration for Orbit Institute System

# Application Settings
NODE_ENV=production
PORT=5000

# Database Configuration
DATABASE_URL=postgresql://orbit_user:OrbitSecure2024!@localhost:5432/orbit_db

# Session Security
SESSION_SECRET=your_super_secure_session_secret_change_this_to_something_random_and_long

# Email Configuration (SendGrid - Optional)
# SENDGRID_API_KEY=your_sendgrid_api_key_here

# SMTP Configuration (Alternative to SendGrid)
# EMAIL_HOST=smtp.your-email-provider.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@domain.com
# EMAIL_PASS=your-email-password
# EMAIL_FROM=noreply@your-domain.com

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_PATH=./uploads

# Security Settings
BCRYPT_ROUNDS=12
JWT_SECRET=your_jwt_secret_key_make_it_secure

# Application URL (for email links, etc.)
APP_URL=https://your-domain.com

# Logging Level
LOG_LEVEL=info

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=false

# Backup Settings
BACKUP_RETENTION_DAYS=30

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# CORS Settings
CORS_ORIGIN=https://your-domain.com

# File Storage (if using cloud storage)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your-bucket-name